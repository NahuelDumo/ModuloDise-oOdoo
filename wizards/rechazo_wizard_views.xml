<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista del formulario del wizard de rechazo -->
        <record id="view_rechazo_diseno_wizard_form" model="ir.ui.view">
            <field name="name">design.rechazo.wizard.form</field>
            <field name="model">design.rechazo.wizard</field>
            <field name="arch" type="xml">
                <form string="Rechazar Diseño">
                    <sheet>
                        <div class="oe_title">
                            <h1>Rechazar Diseño</h1>
                        </div>
                        
                        <group>
                            <field name="design_id" invisible="1"/>
                            <field name="motivo" nolabel="1" placeholder="Describa el motivo del rechazo..." class="mt16" style="min-height: 100px;"/>
                        </group>
                        
                        <footer>
                            <button name="action_confirmar_rechazo" 
                                    string="Confirmar Rechazo" 
                                    type="object" 
                                    class="btn-danger"
                                    confirm="¿Está seguro de que desea rechazar este diseño?"/>
                            <button string="Cancelar" 
                                    class="btn-secondary" 
                                    special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Acción para abrir el wizard de rechazo -->
        <record id="action_rechazo_diseno_wizard" model="ir.actions.act_window">
            <field name="name">Rechazar Diseño</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">design.rechazo.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_design_design"/>
            <field name="binding_view_types">form</field>
        </record>
    </data>
</odoo>

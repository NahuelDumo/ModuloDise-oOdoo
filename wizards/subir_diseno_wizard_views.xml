<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_subir_diseno_wizard_form" model="ir.ui.view">
        <field name="name">design.subir.diseno.wizard.form</field>
        <field name="model">design.subir.diseno.wizard</field>
        <field name="arch" type="xml">
            <form string="Subir Nuevo Diseño">
                <sheet>
                    <div class="oe_title">
                        <h1>Subir Nueva Versión del Diseño</h1>
                    </div>
                    <div class="oe_edit_only">
                        <div class="alert alert-info">
                            <p>Por favor, adjunte la nueva versión del diseño que desea enviar para validación.</p>
                        </div>
                        <group>
                            <field name="image" filename="name" string="Nuevo Diseño" required="1"/>
                        </group>
                    </div>
                    <footer>
                        <button name="action_subir_diseno" string="Enviar para Validación" type="object" class="oe_highlight"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_subir_diseno_wizard" model="ir.actions.act_window">
        <field name="name">Subir Nuevo Diseño</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">design.subir.diseno.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_design_design"/>
    </record>
</odoo>

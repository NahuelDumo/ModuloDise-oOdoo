<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Heredar la vista principal del portal para agregar el botón de Diseños -->
    <template id="portal_my_home" inherit_id="portal.portal_my_home" name="Portal Home - Diseños">
        <xpath expr="//div[hasclass('o_portal_my_home')]" position="inside">
            <div class="list-group">
                <a href="/my/designs" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                    <div class="d-flex">
                        <i class="fa fa-paint-brush me-2"></i>
                        <span>Diseños</span>
                    </div>
                    <span class="badge bg-secondary rounded-pill" t-esc="design_count if design_count else 0">0</span>
                </a>
            </div>
        </xpath>
    </template>

    <!-- Plantilla independiente para la lista de diseños del portal -->
    <template id="portal_my_designs" name="Mis Diseños">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-set="title">Mis Diseños</t>
            
            <div class="container mt-3">
                <!-- Menú de navegación -->
                <div class="o_portal_submenu mb-3">
                    <a href="/my/home" class="btn btn-link">
                        <i class="fa fa-arrow-left me-2"></i> Volver al inicio
                    </a>
                </div>
                
                <!-- Encabezado -->
                <div class="row mb-4">
                    <div class="col">
                        <h2 class="mb-0">Mis Diseños</h2>
                    </div>
                </div>

                <!-- Tabla de diseños -->
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Diseño</th>
                                <th>Fecha</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="designs" t-as="design">
                                <tr>
                                    <td>
                                        <a t-att-href="'/my/design/%s' % design.id" class="text-primary">
                                            <span t-field="design.name"/>
                                        </a>
                                    </td>
                                    <td>
                                        <span t-field="design.create_date" t-options='{"widget": "date"}'/>
                                    </td>
                                    <td>
                                        <span t-attf-class="badge #{'bg-warning' if design.state == 'cliente' else 'bg-success' if design.state == 'aprobado' else 'bg-danger'}">
                                            <t t-esc="dict(design._fields['state'].selection).get(design.state)"/>
                                        </span>
                                    </td>
                                    <td>
                                        <a t-att-href="'/my/design/%s' % design.id" class="btn btn-sm btn-outline-primary">
                                            <i class="fa fa-eye me-1"></i> Ver
                                        </a>
                                    </td>
                                </tr>
                            </t>
                            <t t-if="not designs">
                                <tr>
                                    <td colspan="4" class="text-center py-4">
                                        <p class="text-muted mb-0">
                                            <i class="fa fa-inbox fa-2x mb-2 text-muted"></i><br/>
                                            No hay diseños para mostrar
                                        </p>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>
    
    <!-- Plantilla para el detalle de un diseño -->
    <template id="portal_my_design" name="Detalle del Diseño">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-set="title">Detalle del Diseño</t>
            
            <div class="container mt-3">
                <div class="row">
                    <!-- Columna Principal (8) -->
                    <div class="col-md-8">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="fa fa-image me-2"></i>
                                    <span t-field="design.name"/>
                                </h5>
                            </div>
                            <div class="card-body">
                                <!-- Archivos adjuntos con previsualización -->
                                <div class="mb-4">
                                    <h5 class="mt-3">Archivos Adjuntos</h5>
                                    <div class="list-group mb-4">
                                        <t t-if="attachments_info">
                                            <t t-foreach="attachments_info" t-as="attachment">
                                            <div class="list-group-item">
                                                <div class="d-flex w-100 justify-content-between mb-2">
                                                    <h6 class="mb-1"><span t-esc="attachment.name"/></h6>
                                                    <a t-att-href="attachment.download_url" class="btn btn-sm btn-outline-secondary">
                                                        <i class="fa fa-download"/> Descargar
                                                    </a>
                                                </div>

                                                <!-- Mostrar previsualización para imágenes -->
                                                <t t-if="'image' in attachment.name.lower() or (attachment.mimetype and 'image' in attachment.mimetype)">
                                                    <div class="mt-2 text-center">
                                                        <img t-att-src="'/my/design/attachment/' + str(attachment.id) + '/download?access_token=' + attachment.access_token" 
                                                             class="img-fluid rounded border" 
                                                             style="max-height: 200px;"
                                                             t-att-alt="attachment.name"/>
                                                    </div>
                                                </t>
                                            </div>
                                            </t>
                                        </t>
                                        <t t-else="">
                                            <div class="alert alert-info">No hay archivos adjuntos.</div>
                                        </t>
                                    </div>
                                </div>

                                <!-- Información del diseño -->
                                <div class="mb-4">
                                    <h5>Información del diseño</h5>
                                    <dl class="row">
                                        <dt class="col-sm-3">Estado:</dt>
                                        <dd class="col-sm-9">
                                            <span t-attf-class="badge #{'bg-warning' if design.state in ['cliente', 'correcciones_solicitadas'] else 'bg-success' if design.state == 'aprobado' else 'bg-danger'}">
                                                <t t-esc="dict(design._fields['state'].selection).get(design.state)"/>
                                            </span>
                                        </dd>
                                        <dt class="col-sm-3">Fecha de creación:</dt>
                                        <dd class="col-sm-9"><span t-field="design.create_date"/></dd>
                                    </dl>
                                </div>

                                <!-- Comentario del Diseñador -->
                                <div t-if="design.comentario_disenador" class="mb-4">
                                    <h5>Comentario del Diseñador</h5>
                                    <div class="alert alert-info" role="alert">
                                        <span t-field="design.comentario_disenador"/>
                                    </div>
                                </div>

                                <!-- Tus Comentarios (Cliente) -->
                                <div t-if="design.mensaje_cliente" class="mb-4">
                                    <h5>Tus Comentarios</h5>
                                    <div class="alert alert-secondary" role="alert">
                                        <span t-field="design.mensaje_cliente"/>
                                    </div>
                                </div>

                                <!-- Formulario para que el cliente envíe un mensaje -->
                                <div class="mb-4">
                                    <h5>Enviar un comentario</h5>
                                    <form t-attf-action="/my/design/#{design.id}/comment" method="post">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        <div class="mb-3">
                                            <textarea class="form-control" name="mensaje_cliente" rows="3" placeholder="Escribe tu comentario aquí..."></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Enviar comentario</button>
                                    </form>
                                </div>

                                <!-- Formulario de aprobación/rechazo -->
                                <t t-if="design.state in ['cliente', 'correcciones_solicitadas']">
                                    <div class="mt-4 pt-3 border-top">
                                        <h5>Acciones</h5>
                                        <p>Por favor, revisa el diseño y selecciona una opción:</p>
                                        <div class="d-flex gap-2">
                                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#approveModal"><i class="fa fa-check me-2"></i>Aprobar</button>
                                            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#approveWithChangesModal"><i class="fa fa-edit me-2"></i>Aprobar con correcciones</button>
                                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal"><i class="fa fa-times me-2"></i>Rechazar</button>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>

                    <!-- Columna Lateral (4) -->
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="mb-0">Información del proyecto</h6>
                            </div>
                            <div class="card-body">
                                <dl class="mb-0">
                                    <dt>Cliente:</dt>
                                    <dd><span t-field="design.cliente_id"/></dd>
                                    <dt>Tarea asociada:</dt>
                                    <dd>
                                        <t t-if="design.task_id">
                                            <a t-att-href="'/web#id=' + str(design.task_id.id) + '&amp;model=project.task&amp;view_type=form'" target="_blank">
                                                <i class="fa fa-tasks me-1"></i>
                                                <span t-field="design.task_id.name"/>
                                            </a>
                                        </t>
                                        <t t-else="">No hay tarea asociada</t>
                                    </dd>
                                    <dt>Diseñador:</dt>
                                    <dd><span t-if="design.task_id.user_ids" t-esc="design.task_id.user_ids[0].name"/></dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Modales (fuera de las columnas para evitar problemas de renderizado) -->
                <!-- Modal de Aprobar -->
                <div class="modal fade" id="approveModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Confirmar aprobación</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                            </div>
                            <div class="modal-body">
                                <p>¿Estás seguro de que deseas aprobar este diseño?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                <form t-att-action="'/my/design/approve'" method="post" class="d-inline">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="design_id" t-att-value="design.id"/>
                                    <button type="submit" class="btn btn-success">Sí, aprobar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Modal de Aprobar con correcciones -->
                <div class="modal fade" id="approveWithChangesModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Aprobar con correcciones</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                            </div>
                            <form t-att-action="'/my/design/approve-with-changes'" method="post">
                                <div class="modal-body">
                                    <p>Por favor, describe las correcciones necesarias:</p>
                                    <textarea name="message" class="form-control" rows="4" required="required"></textarea>
                                </div>
                                <div class="modal-footer">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="design_id" t-att-value="design.id"/>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn btn-warning">Aprobar con correcciones</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                
                <!-- Modal de Rechazar -->
                <div class="modal fade" id="rejectModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Rechazar diseño</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                            </div>
                            <form t-att-action="'/my/design/reject'" method="post">
                                <div class="modal-body">
                                    <p>Por favor, indica el motivo del rechazo:</p>
                                    <textarea name="message" class="form-control" rows="4" required="required"></textarea>
                                </div>
                                <div class="modal-footer">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="design_id" t-att-value="design.id"/>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn btn-danger">Rechazar diseño</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Botón Volver -->
                <div class="mt-4">
                    <a href="/my/designs" class="btn btn-link">
                        <i class="fa fa-arrow-left me-1"></i> Volver a la lista de diseños
                    </a>
                </div>
            </div>
        </t>
    </template>
</odoo>
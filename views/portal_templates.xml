<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Heredar la vista principal del portal para agregar el botón de Diseños -->
    <template id="portal_my_home" inherit_id="portal.portal_my_home" name="Portal Home - Diseños">
        <xpath expr="//div[hasclass('o_portal_my_home')]" position="inside">
            <div class="list-group">
                <a href="/my/designs" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                    <div class="d-flex">
                        <i class="fa fa-paint-brush me-2"></i>
                        <span>Diseños</span>
                    </div>
                    <span class="badge bg-secondary rounded-pill" t-esc="design_count if design_count else 0">0</span>
                </a>
            </div>
        </xpath>
    </template>

    <!-- Plantilla independiente para la lista de diseños del portal -->
    <template id="portal_my_designs" name="Mis Diseños">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-set="title">Mis Diseños</t>
            
            <div class="container mt-3">
                <!-- Menú de navegación -->
                <div class="o_portal_submenu mb-3">
                    <a href="/my/home" class="btn btn-link">
                        <i class="fa fa-arrow-left me-2"></i> Volver al inicio
                    </a>
                </div>
                
                <!-- Encabezado -->
                <div class="row mb-4">
                    <div class="col">
                        <h2 class="mb-0">Mis Diseños</h2>
                    </div>
                </div>

                <!-- Tabla de diseños -->
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Diseño</th>
                                <th>Fecha</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="designs" t-as="design">
                                <tr>
                                    <td>
                                        <a t-att-href="'/my/design/%s' % design.id" class="text-primary">
                                            <span t-field="design.name"/>
                                        </a>
                                    </td>
                                    <td>
                                        <span t-field="design.create_date" t-options='{"widget": "date"}'/>
                                    </td>
                                    <td>
                                        <span t-attf-class="badge #{'bg-warning' if design.state == 'cliente' else 'bg-success' if design.state == 'aprobado' else 'bg-danger'}">
                                            <t t-esc="dict(design._fields['state'].selection).get(design.state)"/>
                                        </span>
                                    </td>
                                    <td>
                                        <a t-att-href="'/my/design/%s' % design.id" class="btn btn-sm btn-outline-primary">
                                            <i class="fa fa-eye me-1"></i> Ver
                                        </a>
                                    </td>
                                </tr>
                            </t>
                            <t t-if="not designs">
                                <tr>
                                    <td colspan="4" class="text-center py-4">
                                        <p class="text-muted mb-0">
                                            <i class="fa fa-inbox fa-2x mb-2 text-muted"></i><br/>
                                            No hay diseños para mostrar
                                        </p>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>
    
    <!-- Plantilla para el detalle de un diseño -->
    <template id="portal_my_design" name="Detalle del Diseño">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-set="title">Detalle del Diseño</t>
            
            <div class="container mt-3">
                <div class="row">
                    <!-- Columna Principal (8) -->
                    <div class="col-md-8">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="fa fa-image me-2"></i>
                                    <span t-field="design.name"/>
                                </h5>
                            </div>
                            <div class="card-body">
                                <!-- Archivos adjuntos estilo backend -->
                                <div class="mb-4">
                                    <h5 class="mt-3">
                                        <i class="fa fa-paperclip me-2"></i>Adjuntos
                                        <t t-if="attachments">
                                            <span class="badge bg-secondary ms-2"><t t-esc="len(attachments)"/></span>
                                        </t>
                                    </h5>
                                    <div class="row">
                                        <t t-if="attachments">
                                            <t t-foreach="attachments" t-as="attachment">
                                                <div class="col-md-6 col-lg-4 mb-3">
                                                    <div class="card h-100">
                                                        <div class="card-body p-2">
                                                            <!-- Icono y nombre del archivo -->
                                                            <div class="d-flex align-items-center mb-2">
                                                                <t t-if="attachment['file_extension'] in ['jpg', 'jpeg', 'png', 'gif', 'bmp', 'webp', 'svg']">
                                                                    <i class="fa fa-file-image-o fa-2x text-success me-2"></i>
                                                                </t>
                                                                <t t-elif="attachment['file_extension'] == 'pdf'">
                                                                    <i class="fa fa-file-pdf-o fa-2x text-danger me-2"></i>
                                                                </t>
                                                                <t t-else="">
                                                                    <i class="fa fa-file-o fa-2x text-secondary me-2"></i>
                                                                </t>
                                                                <div class="flex-grow-1">
                                                                    <h6 class="mb-0 text-truncate" t-att-title="attachment['name']">
                                                                        <span t-esc="attachment['name']"/>
                                                                    </h6>
                                                                    <small class="text-muted">
                                                                        <t t-esc="round(attachment['file_size'] / 1024, 1)"/> KB
                                                                    </small>
                                                                </div>
                                                            </div>
                                                            
                                                            <!-- Previsualización -->
                                                            <t t-if="(attachment['mimetype'] and attachment['mimetype'].startswith('image/')) or (attachment['file_extension'] in ['jpg','jpeg','png','gif','bmp','webp','svg'])">
                                                                <div class="text-center mb-2">
                                                                    <img t-att-src="attachment['preview_url']" 
                                                                         class="img-fluid rounded" 
                                                                         style="max-height: 140px; cursor: pointer;"
                                                                         t-att-alt="attachment['name']"
                                                                         onclick="window.open(this.src, '_blank')"/>
                                                                    <div class="text-center mt-1"><small class="text-muted">Clic para ver</small></div>
                                                                </div>
                                                            </t>
                                                            <t t-elif="attachment['mimetype'] == 'application/pdf' or attachment['file_extension'] == 'pdf'">
                                                                <div class="mb-2" style="height: 160px; border: 1px solid #eee; border-radius: 4px; overflow: hidden;">
                                                                    <iframe t-att-src="attachment['data_url']" style="width: 100%; height: 100%; border: 0;" title="Vista previa PDF"></iframe>
                                                                </div>
                                                                <div class="text-center"><small class="text-muted">Clic para ver</small></div>
                                                            </t>
                                                            
                                                            <!-- Botones de acción -->
                                                            <div class="d-flex gap-1">
                                                                <a t-att-href="attachment['data_url']" t-att-download="attachment['name']" 
                                                                   class="btn btn-sm btn-outline-primary flex-fill">
                                                                    <i class="fa fa-download"></i> Descargar
                                                                </a>
                                                                <t t-if="attachment['file_extension'] == 'pdf'">
                                                                    <a t-att-href="attachment['data_url']" target="_blank" 
                                                                       class="btn btn-sm btn-outline-secondary">
                                                                        <i class="fa fa-eye"></i>
                                                                    </a>
                                                                </t>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </t>
                                        <t t-else="">
                                            <div class="col-12">
                                                <div class="alert alert-info text-center">
                                                    <i class="fa fa-paperclip fa-2x mb-2 text-muted"></i>
                                                    <br/>No hay archivos adjuntos
                                                </div>
                                            </div>
                                        </t>
                                    </div>
                                </div>

                                <!-- Información del diseño -->
                                <div class="mb-4">
                                    <h5>Información del diseño</h5>
                                    <dl class="row">
                                        <dt class="col-sm-3">Estado:</dt>
                                        <dd class="col-sm-9">
                                            <span t-attf-class="badge #{'bg-warning' if design.state in ['cliente', 'correcciones_solicitadas'] else 'bg-success' if design.state == 'aprobado' else 'bg-danger'}">
                                                <t t-esc="dict(design._fields['state'].selection).get(design.state)"/>
                                            </span>
                                        </dd>
                                        <dt class="col-sm-3">Fecha de creación:</dt>
                                        <dd class="col-sm-9"><span t-field="design.create_date"/></dd>
                                    </dl>
                                </div>

                                <!-- Comentario del Diseñador -->
                                <div t-if="design.comentario_disenador" class="mb-4">
                                    <h5>Comentario del Diseñador</h5>
                                    <div class="alert alert-info" role="alert">
                                        <span t-field="design.comentario_disenador"/>
                                    </div>
                                </div>
                                
                                <!-- Último mensaje de correcciones del cliente -->
                                <div t-if="design.ultimo_mensaje_cliente and design.state == 'correcciones_solicitadas'" class="mb-4">
                                    <h5><i class="fa fa-comment-dots me-2"></i>Última solicitud de correcciones</h5>
                                    <div class="alert alert-warning" role="alert">
                                        <div class="d-flex align-items-start">
                                            <i class="fa fa-exclamation-circle me-2 mt-1"></i>
                                            <div>
                                                <p class="mb-2">Has solicitado correcciones para este diseño:</p>
                                                <div class="border-start border-3 ps-3 ms-2">
                                                    <p class="mb-0 fst-italic" t-field="design.ultimo_mensaje_cliente"/>
                                                </div>
                                                <p class="text-muted small mt-2 mb-0">
                                                    <i class="fa fa-clock me-1"></i>
                                                    <span t-esc="design.write_date" t-options='{"widget": "datetime"}'/>
                                                    <span t-if="design.contador_modificaciones > 0">
                                                        - Modificación #<span t-esc="design.contador_modificaciones"/>/3
                                                    </span>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Sistema de mensajería nativo -->
                                <div class="mb-4">
                                    <h5><i class="fa fa-comments me-2"></i>Mensajes</h5>
                                    
                                    <!-- Mostrar mensajes existentes -->
                                    <div class="border rounded mb-3" style="max-height: 400px; overflow-y: auto;">
                                        <t t-if="messages">
                                            <t t-foreach="messages" t-as="message">
                                                <div class="p-3 border-bottom">
                                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                                        <div class="d-flex align-items-center">
                                                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-2" 
                                                                 style="width: 32px; height: 32px; font-size: 14px;">
                                                                <t t-esc="message['author_name'][:1].upper()"/>
                                                            </div>
                                                            <div>
                                                                <strong t-esc="message['author_name']"/>
                                                                <br/>
                                                                <small class="text-muted" t-esc="message['date']"/>
                                                            </div>
                                                        </div>
                                                        <span t-attf-class="badge bg-#{message['message_type'] == 'comment' and 'info' or 'secondary'}">
                                                            <t t-esc="message['message_type'] == 'comment' and 'Comentario' or 'Nota'"/>
                                                        </span>
                                                    </div>
                                                    <div class="ms-5">
                                                        <div t-raw="message['body']" class="mb-0"/>
                                                    </div>
                                                </div>
                                            </t>
                                        </t>
                                        <t t-else="">
                                            <div class="p-4 text-center text-muted">
                                                <i class="fa fa-comments fa-2x mb-2"></i>
                                                <br/>No hay mensajes aún
                                            </div>
                                        </t>
                                    </div>
                                    
                                    <!-- Formulario para nuevo mensaje -->
                                    <div class="card">
                                        <div class="card-header">
                                            <h6 class="mb-0">
                                                <i class="fa fa-pencil me-2"></i>Enviar mensaje
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <form t-attf-action="/my/design/#{design.id}/message" method="post">
                                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                                <div class="mb-3">
                                                    <textarea class="form-control" name="message_body" rows="4" 
                                                              placeholder="Escribe tu mensaje aquí..." required="required"></textarea>
                                                </div>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <small class="text-muted">
                                                        <i class="fa fa-info-circle me-1"></i>
                                                        Tu mensaje será visible para el equipo de diseño
                                                    </small>
                                                    <button type="submit" class="btn btn-primary">
                                                        <i class="fa fa-paper-plane me-1"></i>Enviar
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                                <!-- Formulario de aprobación/rechazo -->
                                <t t-if="design.state in ['cliente', 'correcciones_solicitadas']">
                                    <div class="mt-4 pt-3 border-top">
                                        <h5>Acciones</h5>
                                        
                                        <!-- Mensaje de última modificación -->
                                        <t t-if="design.contador_modificaciones == 2">
                                            <div class="alert alert-warning mb-3">
                                                <i class="fa fa-exclamation-triangle me-2"></i>
                                                <strong>¡Atención!</strong> Esta es tu última modificación disponible. 
                                                Por favor, revisa cuidadosamente antes de enviar.
                                            </div>
                                        </t>
                                        
                                        <p>Por favor, revisa el diseño y selecciona una opción:</p>
                                        <div class="d-flex gap-2">
                                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#approveModal">
                                                <i class="fa fa-check me-2"></i>Aprobar
                                            </button>
                                            <t t-if="design.contador_modificaciones >= 3">
                                                <button type="button" class="btn btn-warning" disabled="True">
                                                    <i class="fa fa-edit me-2"></i>
                                                    Límite de modificaciones alcanzado
                                                </button>
                                            </t>
                                            <t t-else="">
                                                <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#approveWithChangesModal">
                                                    <i class="fa fa-edit me-2"></i>
                                                    Solicitar correcciones
                                                    <t t-if="design.contador_modificaciones &gt; 0">
                                                        ({{3 - design.contador_modificaciones}} restantes)
                                                    </t>
                                                </button>
                                            </t>
                                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                                <i class="fa fa-times me-2"></i>Rechazar
                                            </button>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>

                    <!-- Columna Lateral (4) -->
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="mb-0">Información del proyecto</h6>
                            </div>
                            <div class="card-body">
                                <dl class="mb-0">
                                    <dt>Cliente:</dt>
                                    <dd><span t-esc="cliente_display_name"/></dd>
                                    <dt>Tarea asociada:</dt>
                                    <dd>
                                        <t t-if="task_display_name">
                                            <span>
                                                <i class="fa fa-tasks me-1"></i>
                                                <t t-esc="task_display_name"/>
                                            </span>
                                        </t>
                                        <t t-else="">No hay tarea asociada</t>
                                    </dd>
                                    <dt>Diseñador:</dt>
                                    <dd><span t-esc="designer_display_name or ''"/></dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Modales (fuera de las columnas para evitar problemas de renderizado) -->
                <!-- Modal de Aprobar -->
                <div class="modal fade" id="approveModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Confirmar aprobación</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                            </div>
                            <div class="modal-body">
                                <p>¿Estás seguro de que deseas aprobar este diseño?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                <form t-att-action="'/my/design/approve'" method="post" class="d-inline">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="design_id" t-att-value="design.id"/>
                                    <button type="submit" class="btn btn-success">Sí, aprobar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Modal de Aprobar con correcciones -->
                <div class="modal fade" id="approveWithChangesModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <t t-if="design.contador_modificaciones >= 3">
                            <div class="modal-content">
                                <div class="modal-header bg-warning text-white">
                                    <h5 class="modal-title">Límite de modificaciones alcanzado</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="alert alert-warning">
                                        <i class="fa fa-exclamation-triangle me-2"></i>
                                        Has alcanzado el número máximo de modificaciones permitidas (3).
                                        Por favor, contacta al equipo de soporte si necesitas asistencia adicional.
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                </div>
                            </div>
                        </t>
                        <t t-else="">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Aprobar con correcciones</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                                </div>
                                <form t-att-action="'/my/design/approve-with-changes'" method="post">
                                    <div class="modal-body">
                                        <p>Por favor, describe las correcciones necesarias:</p>
                                        <textarea name="message" class="form-control" rows="4" required="required"></textarea>
                                        <div class="mt-2 text-muted">
                                            <small>
                                                <i class="fa fa-info-circle me-1"></i>
                                                <t t-if="design.contador_modificaciones == 2">
                                                    <strong>¡Atención!</strong> Esta es tu última modificación disponible.
                                                </t>
                                                <t t-else="">
                                                    Modificaciones restantes: {{3 - design.contador_modificaciones}}
                                                </t>
                                            </small>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        <input type="hidden" name="design_id" t-att-value="design.id"/>
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                        <button type="submit" class="btn btn-warning">
                                            <i class="fa fa-edit me-1"></i>
                                            <t t-if="design.contador_modificaciones == 2">
                                                Enviar última modificación
                                            </t>
                                            <t t-else="">
                                                Enviar correcciones
                                            </t>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </t>
                    </div>
                </div>
                
                <!-- Modal de Rechazar -->
                <div class="modal fade" id="rejectModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Rechazar diseño</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                            </div>
                            <form t-att-action="'/my/design/reject'" method="post">
                                <div class="modal-body">
                                    <p>Por favor, indica el motivo del rechazo:</p>
                                    <textarea name="message" class="form-control" rows="4" required="required"></textarea>
                                </div>
                                <div class="modal-footer">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="design_id" t-att-value="design.id"/>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn btn-danger">Rechazar diseño</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Botón Volver -->
                <div class="mt-4">
                    <a href="/my/designs" class="btn btn-link">
                        <i class="fa fa-arrow-left me-1"></i> Volver a la lista de diseños
                    </a>
                </div>
            </div>
        </t>
    </template>
</odoo>
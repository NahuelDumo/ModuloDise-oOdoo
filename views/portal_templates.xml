<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Plantilla para la lista de diseños del portal -->
    <template id="portal_my_designs" name="Mis Diseños">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-set="title">Mis Diseños</t>
            
            <div class="container mt-3">
                <!-- Mensajes de éxito -->
                <t t-if="message == 'design_approved'">
                    <div class="alert alert-success">
                        <i class="fa fa-check-circle me-2"></i>¡El diseño ha sido aprobado exitosamente!
                    </div>
                </t>
                
                <!-- Lista de diseños -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Diseños para revisar</h5>
                    </div>
                    <div class="card-body">
                        <t t-if="designs">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Fecha</th>
                                            <th>Estado</th>
                                            <th class="text-end">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="designs" t-as="design">
                                            <tr>
                                                <td>
                                                    <a t-att-href="'/my/design/%s' % design.id">
                                                        <i class="fa fa-image me-2"></i>
                                                        <span t-esc="design.name"/>
                                                    </a>
                                                </td>
                                                <td t-field="design.create_date"/>
                                                <td>
                                                    <span t-attf-class="badge #{'bg-warning': design.state in ['cliente', 'correcciones_solicitadas'], 'bg-success': design.state == 'aprobado', 'bg-danger': design.state == 'rechazado'}">
                                                        <t t-esc="dict(design._fields['state'].selection).get(design.state)"/>
                                                    </span>
                                                </td>
                                                <td class="text-end">
                                                    <a t-att-href="'/my/design/%s' % design.id" class="btn btn-sm btn-primary">
                                                        <i class="fa fa-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                        <t t-else="">
                            <div class="text-center py-5">
                                <i class="fa fa-image fa-4x text-muted mb-3"></i>
                                <p class="text-muted">No hay diseños para mostrar</p>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>
    
    <!-- Plantilla para el detalle de un diseño -->
    <template id="portal_my_design" name="Detalle del Diseño">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-set="title">Detalle del Diseño</t>
            
            <div class="container mt-3">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="fa fa-image me-2"></i>
                                    <span t-field="design.name"/>
                                </h5>
                            </div>
                            <div class="card-body">
                                <!-- Galería de imágenes -->
                                <div id="designCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
                                    <div class="carousel-inner">
                                        <t t-foreach="design.image_ids" t-as="image" t-key="image.id">
                                            <div t-attf-class="carousel-item #{'active' if image_index == 0 else ''}">
                                                <img t-att-src="'/web/image/design.image/' + str(image.id) + '/image/1024x1024'" 
                                                     class="d-block w-100" alt="Imagen del diseño"/>
                                            </div>
                                        </t>
                                    </div>
                                    <t t-if="len(design.image_ids) > 1">
                                        <button class="carousel-control-prev" type="button" data-bs-target="#designCarousel" data-bs-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Anterior</span>
                                        </button>
                                        <button class="carousel-control-next" type="button" data-bs-target="#designCarousel" data-bs-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Siguiente</span>
                                        </button>
                                    </t>
                                </div>
                                
                                <!-- Información del diseño -->
                                <div class="mb-4">
                                    <h5>Información del diseño</h5>
                                    <dl class="row">
                                        <dt class="col-sm-3">Estado:</dt>
                                        <dd class="col-sm-9">
                                            <span t-attf-class="badge #{'bg-warning': design.state in ['cliente', 'correcciones_solicitadas'], 'bg-success': design.state == 'aprobado', 'bg-danger': design.state == 'rechazado'}">
                                                <t t-esc="dict(design._fields['state'].selection).get(design.state)"/>
                                            </span>
                                        </dd>
                                        
                                        <dt class="col-sm-3">Fecha de creación:</dt>
                                        <dd class="col-sm-9" t-field="design.create_date"/>
                                        
                                        <t t-if="design.mensaje_cliente">
                                            <dt class="col-sm-3">Tus comentarios:</dt>
                                            <dd class="col-sm-9" t-field="design.mensaje_cliente"/>
                                        </t>
                                    </dl>
                                </div>
                                
                                <!-- Formulario de aprobación/rechazo -->
                                <t t-if="design.state in ['cliente', 'correcciones_solicitadas']">
                                    <div class="mt-4 pt-3 border-top">
                                        <h5>Acciones</h5>
                                        <p>Por favor, revisa el diseño y selecciona una opción:</p>
                                        
                                        <div class="d-flex gap-2">
                                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#approveModal">
                                                <i class="fa fa-check me-2"></i>Aprobar
                                            </button>
                                            
                                            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#approveWithChangesModal">
                                                <i class="fa fa-edit me-2"></i>Aprobar con correcciones
                                            </button>
                                            
                                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                                <i class="fa fa-times me-2"></i>Rechazar
                                            </button>
                                        </div>
                                        
                                        <!-- Modal de Aprobar -->
                                        <div class="modal fade" id="approveModal" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Confirmar aprobación</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>¿Estás seguro de que deseas aprobar este diseño?</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                        <form t-att-action="'/my/design/approve'" method="post" class="d-inline">
                                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                                            <input type="hidden" name="design_id" t-att-value="design.id"/>
                                                            <button type="submit" class="btn btn-success">Sí, aprobar</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <!-- Modal de Aprobar con correcciones -->
                                        <div class="modal fade" id="approveWithChangesModal" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Aprobar con correcciones</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                                                    </div>
                                                    <form t-att-action="'/my/design/approve-with-changes'" method="post">
                                                        <div class="modal-body">
                                                            <p>Por favor, describe las correcciones necesarias:</p>
                                                            <textarea name="message" class="form-control" rows="4" required="required"></textarea>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                                            <input type="hidden" name="design_id" t-att-value="design.id"/>
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                            <button type="submit" class="btn btn-warning">Aprobar con correcciones</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <!-- Modal de Rechazar -->
                                        <div class="modal fade" id="rejectModal" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Rechazar diseño</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                                                    </div>
                                                    <form t-att-action="'/my/design/reject'" method="post">
                                                        <div class="modal-body">
                                                            <p>Por favor, indica el motivo del rechazo:</p>
                                                            <textarea name="message" class="form-control" rows="4" required="required"></textarea>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                                            <input type="hidden" name="design_id" t-att-value="design.id"/>
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                            <button type="submit" class="btn btn-danger">Rechazar diseño</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <!-- Información adicional -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="mb-0">Información del proyecto</h6>
                            </div>
                            <div class="card-body">
                                <dl class="mb-0">
                                    <dt>Cliente:</dt>
                                    <dd t-field="design.cliente_id"/>
                                    
                                    <dt>Tarea asociada:</dt>
                                    <dd>
                                        <t t-if="design.task_id">
                                            <a t-att-href="'/web#id=' + str(design.task_id.id) + '&amp;model=project.task&amp;view_type=form'" target="_blank">
                                                <i class="fa fa-tasks me-1"></i>
                                                <span t-field="design.task_id.name"/>
                                            </a>
                                        </t>
                                        <t t-else>No hay tarea asociada</t>
                                    </dd>
                                    
                                    <dt>Diseñador:</dt>
                                    <dd t-field="design.usuario_disenador"/>
                                    
                                    <dt>Validador:</dt>
                                    <dd t-field="design.usuario_validador"/>
                                </dl>
                            </div>
                        </div>
                        
                        <!-- Historial de revisiones -->
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">Historial de revisiones</h6>
                            </div>
                            <div class="card-body">
                                <t t-if="design.revision_log_ids">
                                    <div class="timeline">
                                        <t t-foreach="design.revision_log_ids.sorted('create_date', reverse=True)" t-as="log">
                                            <div class="timeline-item">
                                                <div class="timeline-point">
                                                    <i t-attf-class="fa #{log.tipo == 'aprobacion' ? 'fa-check-circle text-success' : 'fa-times-circle text-danger'}"></i>
                                                </div>
                                                <div class="timeline-content">
                                                    <div class="d-flex justify-content-between">
                                                        <strong t-esc="log.usuario_id.name"/>
                                                        <small class="text-muted" t-field="log.create_date"/>
                                                    </div>
                                                    <p t-field="log.mensaje" class="mb-1"/>
                                                    <t t-if="log.observaciones">
                                                        <small class="text-muted">
                                                            <i class="fa fa-comment me-1"></i>
                                                            <span t-field="log.observaciones"/>
                                                        </small>
                                                    </t>
                                                </div>
                                            </div>
                                        </t>
                                    </div>
                                </t>
                                <t t-else>
                                    <p class="text-muted mb-0">No hay historial de revisiones</p>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="mt-4">
                    <a href="/my/designs" class="btn btn-link">
                        <i class="fa fa-arrow-left me-1"></i> Volver a la lista de diseños
                    </a>
                </div>
            </div>
        </t>
    </template>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista de árbol para validaciones -->
    <record id="view_validation_tree" model="ir.ui.view">
        <field name="name">design.validation.tree</field>
        <field name="model">design.validation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="design_id"/>
                <field name="user_id"/>
                <field name="user_type"/>
                <field name="state"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario para validaciones -->
    <record id="view_validation_form" model="ir.ui.view">
        <field name="name">design.validation.form</field>
        <field name="model">design.validation</field>
        <field name="arch" type="xml">
            <form string="Validación de Diseño">
                <header>
                    <button name="action_start_validation" type="object" string="Iniciar Validación"
                            attrs="{'invisible': [('state', '!=', 'draft')]}" class="btn-primary"/>
                    <button name="action_complete_validation" type="object" string="Completar Validación"
                            attrs="{'invisible': [('state', '!=', 'in_progress')]}" class="btn-success"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="design_id"/>
                        <field name="user_id" readonly="1"/>
                        <field name="user_type" readonly="1"/>
                        <field name="state" readonly="1"/>
                        <field name="start_date" readonly="1"/>
                        <field name="end_date" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Ítems de Validación">
                            <field name="item_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="is_required"/>
                                    <field name="is_checked"/>
                                    <field name="comments"/>
                                    <field name="sequence"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para acceder a las validaciones desde el menú -->
    <record id="action_validation" model="ir.actions.act_window">
        <field name="name">Validaciones</field>
        <field name="res_model">design.validation</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <!-- Menú para las validaciones -->
    <menuitem id="menu_validaciones"
              name="Validaciones"
              parent="menu_diseno_operaciones"
              sequence="30"
              action="action_validation"/>
</odoo>

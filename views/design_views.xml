<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_design" model="ir.ui.view">
            <field name="name">design.design.form</field>
            <field name="model">design.design</field>
            <field name="arch" type="xml">
                <form string="Diseño">
                    <header>
                        <!-- Botón de solicitud de nueva verificación (solo para diseñador cuando el estado es rechazado) -->
                        <button name="solicitar_nueva_verificacion" type="object" string="Solicitar verificación nueva"
                                class="oe_highlight"
                                attrs="{'invisible': ['|', ('state', '!=', 'rechazado'), ('diseño_subido', '=', True)]}"
                                groups="ModuloDisenoOdoo.group_disenador,base.group_system"/>
                        
                        <button name="subir_diseno" type="object" string="Subir diseño"
                                class="oe_highlight"
                                attrs="{'invisible': ['|', ('diseño_subido','=',True), '|', ('state','=','aprobado'), '|', ('state','=','rechazado'), ('state','=','validacion')]}"
                                groups="ModuloDisenoOdoo.group_disenador"/>
                        
                        <!-- Botón RECHAZAR solo visible para validadores -->
                        <button name="action_rechazar_diseno" type="object" string="Rechazar diseño"
                                class="btn btn-danger"
                                attrs="{'invisible': [('can_reject', '=', False)]}" 
                                groups="ModuloDisenoOdoo.group_validador"
                                confirm="¿Está seguro de que desea rechazar este diseño?"/>
                        
                        <button name="marcar_como_aprobado_por_cliente" type="object" string="Aprobar diseño"
                                class="btn btn-primary"
                                attrs="{'invisible': [('visible_para_cliente','=',False)]}"
                                groups="ModuloDisenoOdoo.group_cliente"/>
                    </header>

                    <sheet>
                        <group string="Información del diseño">
                            <field name="name"/>
                            <field name="cliente_id"/>
                            <field name="categoria_id"/>
                            <field name="task_id"/>
                        </group>

                        <group string="Etapa y estado">
                            <field name="etapa" readonly="1"/>
                            <field name="state" readonly="1"/>
                            <field name="diseño_subido" invisible="1"/>
                            <field name="can_reject" invisible="1"/>
                            <field name="fecha_subida_diseno" readonly="1"/>
                            <field name="visible_para_cliente" invisible="1"/>
                            <field name="is_designer" invisible="1"/>
                            <field name="is_validator" invisible="1"/>
                        </group>

                        <group string="Adjuntos" colspan="2">
                            <field name="attachment_ids" nolabel="1" widget="many2many_kanban">
                                <kanban class="o_kanban_mobile o_kanban_ungrouped" default_order="name" style="display: flex !important; flex-direction: row !important; flex-wrap: wrap !important;">
                                    <field name="mimetype"/>
                                    <field name="name"/>
                                    <field name="id"/>
                                    <field name="file_size"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click" style="width: 180px; height: 200px; margin: 5px; display: inline-block;">
                                                <div class="card h-100">
                                                    <div class="card-body p-2 d-flex flex-column">
                                                        <!-- Icono y nombre del archivo -->
                                                        <div class="d-flex align-items-center mb-2">
                                                            <t t-if="record.mimetype.raw_value and record.mimetype.raw_value.indexOf('image') === 0">
                                                                <i class="fa fa-file-image-o fa-lg text-success me-2"/>
                                                            </t>
                                                            <t t-elif="record.mimetype.raw_value === 'application/pdf'">
                                                                <i class="fa fa-file-pdf-o fa-lg text-danger me-2"/>
                                                            </t>
                                                            <t t-else="">
                                                                <i class="fa fa-file-o fa-lg text-secondary me-2"/>
                                                            </t>
                                                            <div class="flex-grow-1">
                                                                <h6 class="mb-0 text-truncate" style="font-size: 11px;">
                                                                    <t t-esc="record.name.raw_value"/>
                                                                </h6>
                                                                <small class="text-muted" style="font-size: 10px;">
                                                                    <t t-esc="Math.round(record.file_size.raw_value / 1024)"/> KB
                                                                </small>
                                                            </div>
                                                        </div>
                                                        
                                                        <!-- Previsualización de imagen -->
                                                        <t t-if="record.mimetype.raw_value and record.mimetype.raw_value.indexOf('image') === 0">
                                                            <div class="text-center mb-2 flex-grow-1">
                                                                <img t-att-src="kanban_image('design.image', 'file_data', record.id.raw_value)" 
                                                                     class="img-fluid rounded" 
                                                                     style="max-height: 100px; cursor: pointer;"
                                                                     alt="Adjunto"/>
                                                            </div>
                                                        </t>
                                                        
                                                        <!-- Información adicional -->
                                                        <div class="text-center mt-auto">
                                                            <small class="text-muted" style="font-size: 9px;">
                                                                <i class="fa fa-eye"/> Clic para ver
                                                            </small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </group>

                        <notebook>
                            <page string="Checklist">
                                <field name="checklist_ids">
                                    <tree>
                                        <!-- Campos necesarios para los attrs -->
                                        <field name="current_user_is_designer" invisible="1"/>
                                        <field name="current_user_is_validator" invisible="1"/>
                                        <field name="usuario_validador" invisible="1"/>
                                        <field name="usuario_disenador" invisible="1"/>
                                        
                                        <field name="name" readonly="1"/>
                                        <field name="orden" invisible="1"/>
                                        
                                        <!-- Campo validado_por_disenador - solo editable por diseñador -->
                                        <field name="validado_por_disenador"
                                               attrs="{
                                                   'readonly': [('current_user_is_designer', '=', False)]
                                               }"/>
                                        
                                        <!-- Campo validado_por_validador - solo editable por validador -->
                                        <field name="validado_por_validador"
                                               attrs="{
                                                   'readonly': [('current_user_is_validator', '=', False)]
                                               }"/>
                                               
                                        <!-- Comentario - editable por ambos -->
                                        <field name="comentario" 
                                               attrs="{'readonly': [
                                                   '&amp;', 
                                                   ('current_user_is_designer', '=', False), 
                                                   ('current_user_is_validator', '=', False)
                                               ]}"/>
                                        
                                        <!-- Mostrar fechas y usuarios de validación -->
                                        <field name="fecha_disenador" readonly="1"/>
                                        <field name="fecha_validador" readonly="1"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Historial">
                                <field name="historial_ids">
                                    <tree>
                                        <field name="usuario_id"/>
                                        <field name="tipo"/>
                                        <field name="observaciones"/>
                                        <field name="create_date"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Comentarios">
                                <group>
                                    <!-- Comentarios del Validador -->
                                    <group string="Comentarios del Validador">
                                        <field name="comentario_validador"
                                               attrs="{
                                                   'readonly': [('is_validator', '=', False)]
                                               }"/>
                                    </group>
                                    
                                    <!-- Comentarios del Diseñador -->
                                    <group string="Comentarios del Diseñador">
                                        <field name="comentario_disenador"
                                               attrs="{
                                                   'readonly': [('is_designer', '=', False)]
                                               }"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Información Adicional">
                                <group>
                                    <field name="fecha_subida_diseno" readonly="1"/>
                                    <field name="fecha_aprobacion_cliente" readonly="1"/>
                                    <field name="fecha_rechazo" readonly="1"/>
                                </group>
                            </page>

                            <!-- NUEVA pestaña para correcciones del cliente -->
                            <page string="Correcciones del Cliente">
                                <group>
                                    <separator string="Última solicitud de corrección"/>
                                    <field name="ultimo_mensaje_cliente" nolabel="1" readonly="1"
                                           placeholder="Sin correcciones solicitadas aún"/>
                                </group>
                            </page>
                            
                        </notebook>
                    </sheet>
                    
                    <!-- Chatter nativo de Odoo -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>